{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2022": true,
    "jest": true
  },
  "root": true,
  "extends": ["@bitovi/eslint-config/node", "prettier"],
  "plugins": ["prettier"],
  "ignorePatterns": ["dist/**"],
  "rules": {
    "@typescript-eslint/explicit-module-boundary-types": "warn",
    "no-prototype-builtins": "warn",
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
        "endOfLine": "lf",
        "parser": "typescript",
        "printWidth": 80,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "all",
        "useTabs": false
      }
    ]
  }
}
